<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="plateRadius" format="integer" />
    <attr name="plateWidth" format="integer" />
    <attr name="backPicSource" format="reference" />
    <declare-styleable name="MainPicView">
        <attr name="backPicSource" />
        <attr name="stepCount" />
        <attr name="plateRadius" />
        <attr name="plateWidth" />
    </declare-styleable>
    <declare-styleable name="RadarView">
        <attr name="startColor" format="color" />
        //起始颜色
        <attr name="endColor" format="color" />
        //终止颜色
        <attr name="bgColor" format="color" />
        //雷达背景颜色
        <attr name="circleCount" format="integer" />//圆圈数量
        <attr name="lineColor" format="color" />
        //绘制圆圈和基线的颜色
        <attr name="bgPic" format="reference"></attr>
        <attr name="stepCount" format="integer"></attr>
    </declare-styleable>
</resources>